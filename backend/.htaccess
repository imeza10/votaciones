# Apache configuration for Backend PHP
RewriteEngine On

# Enable CORS
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

# Handle preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# API Routes - Priority order matters!

# Votantes: GET/PUT/DELETE /api/votantes/:id
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/votantes/([0-9]+)/?$ api/votantes/index.php [L,QSA]

# Votantes: GET verificar-duplicado
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/votantes/verificar-duplicado/?$ api/votantes/index.php [L,QSA]

# Votantes: GET/POST /api/votantes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/votantes/?$ api/votantes/index.php [L,QSA]

# Usuarios: PATCH /api/usuarios/:id/estado
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/usuarios/([0-9]+)/estado/?$ api/usuarios/index.php [L,QSA]

# Usuarios: PATCH /api/usuarios/:id/password
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/usuarios/([0-9]+)/password/?$ api/usuarios/index.php [L,QSA]

# Usuarios: GET/PUT/DELETE /api/usuarios/:id
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/usuarios/([0-9]+)/?$ api/usuarios/index.php [L,QSA]

# Usuarios: GET verificar-duplicado
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/usuarios/verificar-duplicado/?$ api/usuarios/index.php [L,QSA]

# Usuarios: GET/POST /api/usuarios
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/usuarios/?$ api/usuarios/index.php [L,QSA]

# Ubicaciones: Municipios de un departamento
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/ubicaciones/municipios/([0-9]+)/?$ api/ubicaciones/municipios.php [L,QSA]

# Ubicaciones: Barrios de un municipio
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/ubicaciones/barrios/([0-9]+)/?$ api/ubicaciones/barrios.php [L,QSA]

# Ubicaciones: Lugares de votaci√≥n de un municipio
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/ubicaciones/lugares-votacion/([0-9]+)/?$ api/ubicaciones/lugares-votacion.php [L,QSA]

# Ubicaciones: Departamentos
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/ubicaciones/departamentos/?$ api/ubicaciones/departamentos.php [L,QSA]

# Generic API routes (fallback)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/([^/]+)/([^/]+)/?$ api/$1/$2.php [L,QSA]

# Redirect to HTTPS (opcional, comentar si no tienes SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"

# Deny access to config files
<FilesMatch "^(config\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PHP settings
php_value upload_max_filesize 5M
php_value post_max_size 5M
php_value max_execution_time 300
